@model OlineAuctionMarketing.Models.DTO.Product.ProductsResponseModel

<h1>Create product </h1>
<table class="table">
    <thead>
    <th>
        Product Name
    </th>

    <th>
        Description
    </th>

    <th>
        StartingPrice
    </th>

    <th>
        StartingTime
    </th>
    <th>
        EndingTime
    </th>
    <th>
        Image
    </th>
    <th>
        Actions
    </th>

    </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Data)
        {
            <tr>
              
                <td scope="row">
                    @item.ProductName
                </td>
                <td scope="row">
                    @item.Description
                </td>
                <td scope="row">
                    @item.StartingPrice
                </td>
                <td scope="row">
                    @item.StartingTime
                </td>
                <td scope="row">
                    @item.EndingTime
                </td>
                <td scope="row">
                    @item.Image
                </td>
                <td scope="row">
                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">View</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>
<form asp-action="Create">
    <button type="submit" class="btn btn-success">Add new product</button>
</form>